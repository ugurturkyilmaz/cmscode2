definition {

	macro configureSetupPG {
		Portlet.gotoPortletOptions(
			portletName = "Wiki Display",
			portletOption = "Configuration");

		SelectFrame(locator1 = "IFrame#MODAL_BODY");

		Select(
			key_selectFieldLabel = "Node",
			locator1 = "Select#ANY",
			value1 = "${wikiNodeName}");

		AssertSelectedLabel(
			key_selectFieldLabel = "Node",
			locator1 = "Select#ANY",
			value1 = "${wikiNodeName}");

		Select(
			key_selectFieldLabel = "Page",
			locator1 = "Select#ANY",
			value1 = "${wikiPageName}");

		AssertSelectedLabel(
			key_selectFieldLabel = "Page",
			locator1 = "Select#ANY",
			value1 = "${wikiPageName}");

		PortletEntry.save();
	}

}