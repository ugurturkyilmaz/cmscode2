definition {

	macro convertPG {
		Type(
			locator1 = "CurrencyConverter#NUMBER_FIELD",
			value1 = "${currencyValue}");

		Select(
			locator1 = "CurrencyConverter#FROM_SELECT",
			value1 = "${currencyFrom}");

		Select(
			locator1 = "CurrencyConverter#TO_SELECT",
			value1 = "${currencyTo}");

		AssertClick(
			locator1 = "Button#CONVERT",
			value1 = "Convert");

		AssertTextEquals.assertPartialText(
			locator1 = "CurrencyConverter#DATA_TABLE_FROM",
			value1 = "${currencyDataFrom}");

		AssertTextEquals.assertPartialText(
			locator1 = "CurrencyConverter#DATA_TABLE_TO",
			value1 = "${currencyDataTo}");

		AssertElementPresent(locator1 = "CurrencyConverter#DATA_GRAPH");
	}

}