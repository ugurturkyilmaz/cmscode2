@default = "copy"
definition {

	function copy {
		WaitForSPARefresh();

		if (contains("${locator1}", "/input")) {
			Copy.valueCopy();
		}
		else {
			Copy.textCopy();
		}
	}

	function textCopy {
		WaitForSPARefresh();

		selenium.waitForVisible();

		selenium.mouseOver();

		selenium.copyText();

		selenium.assertJavaScriptErrors();

		selenium.assertLiferayErrors();
	}

	function valueCopy {
		WaitForSPARefresh();

		selenium.waitForVisible();

		selenium.mouseOver();

		selenium.copyValue();

		selenium.assertJavaScriptErrors();

		selenium.assertLiferayErrors();
	}

}