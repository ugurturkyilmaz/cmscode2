<?xml version="1.0"?>
<!DOCTYPE project>

<project>
	<path id="theme.builder.classpath">
		<fileset
			dir="../../../../tools/sdk/dist"
			includes="com.liferay.portal.tools.theme.builder-*.jar"
		/>
	</path>

	<taskdef
		classpathref="theme.builder.classpath"
		resource="com/liferay/portal/tools/theme/builder/ant/taskdefs.properties"
	/>

	<target name="build-theme">
		<build-theme
			diffsDir="diffs"
			outputDir="../tmp"
			parentDir="../../../apps/frontend-theme/frontend-theme-styled/classes/META-INF/resources/_styled"
			parentName="_styled"
			unstyledDir="../../../apps/frontend-theme/frontend-theme-unstyled/classes/META-INF/resources/_unstyled"
		/>
	</target>
</project>