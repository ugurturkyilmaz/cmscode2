<?xml version="1.0"?>

<archetype-descriptor name="liferay-module-layout-template">
	<fileSets>
		<fileSet filtered="true">
			<directory>src/main/webapp</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<excludes>
				<exclude>**/*.png</exclude>
			</excludes>
		</fileSet>
		<fileSet filtered="false">
			<directory>src/main/webapp</directory>
			<includes>
				<include>**/*.png</include>
			</includes>
		</fileSet>
		<fileSet filtered="true">
			<directory></directory>
			<includes>
				<include>.gitignore</include>
				<include>build.gradle</include>
			</includes>
		</fileSet>
	</fileSets>
	<requiredProperties>
		<requiredProperty key="author">
		</requiredProperty>
		<requiredProperty key="liferayVersion">
			<validationRegex>^[0-7]\.\d+\.\d+.*</validationRegex>
		</requiredProperty>
	</requiredProperties>
</archetype-descriptor>