@component-name = "portal-solutions"
definition {

	property osgi.modules.includes = "site-initializer-testray";
	property portal.release = "false";
	property portal.upstream = "true";
	property testray.main.component.name = "Testray 2";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		Testray.createTestraySite(siteName = "Testray 2");

		Refresh();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		Testray.tearDownCP();

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
	}

	@description = "LPS-150166 - Verify the user can enter a Routine."
	@priority = "5"
	test CanEnterARoutine {
		ApplicationsMenu.gotoSite(site = "Testray 2");

		Testray.createProjectTestray(key_name = "Liferay Portal 7.2");

		Click(
			key_projectName = "Liferay Portal 7.2",
			locator1 = "Testray#PROJECT_NAME_BUTTON");

		Click(locator1 = "Testray#ADD_PROJECT");

		Type(
			locator1 = "TestrayManage#NEW_OPTION_NAME",
			value1 = "EE Pull Request");

		Click(locator1 = "TestrayManage#SAVE_BUTTON");

		AssertElementPresent(
			key_projectName = "EE Pull Request",
			locator1 = "Testray#PROJECT_NAME_BUTTON");
	}

	@description = "LPS-150165 - Verify the user can access a project on Project Directory."
	@priority = "5"
	test CanEnterOnRoutineTab {
		ApplicationsMenu.gotoSite(site = "Testray 2");

		Testray.createProjectTestray(key_name = "Liferay Portal 7.2");

		Click(
			key_projectName = "Liferay Portal 7.2",
			locator1 = "Testray#PROJECT_NAME_BUTTON");

		AssertElementPresent(
			key_pageTabTilte = "Routines",
			locator1 = "TestrayHeader#PAGE_TAB_TITLE");
	}

}