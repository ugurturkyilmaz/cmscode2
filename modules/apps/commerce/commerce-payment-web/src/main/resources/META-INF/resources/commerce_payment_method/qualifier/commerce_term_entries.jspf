<c:if test="<%= hasPermission %>">
	<div id="item-finder-root-payment-terms"></div>

	<liferay-frontend:component
		context='<%=
			HashMapBuilder.<String, Object>put(
				"apiUrl", "/o/headless-commerce-admin-order/v1.0/terms?filter=type eq '" + CommerceTermEntryConstants.TYPE_PAYMENT_TERMS + "'"
			).put(
				"datasetId", CommercePaymentMethodGroupRelClayDataSetDisplayNames.COMMERCE_DATA_SET_KEY_COMMERCE_TERM_ENTRIES
			).put(
				"paymentMethodGroupRelId", commercePaymentMethodGroupRelId
			).put(
				"rootPortletId", portletDisplay.getRootPortletId()
			).build()
		%>'
		module="js/commerce_term_entries"
	/>

	<commerce-ui:panel
		bodyClasses="p-0"
		title='<%= LanguageUtil.get(request, "payment-terms") %>'
	>
		<clay:headless-data-set-display
			apiURL="<%= commercePaymentMethodGroupRelQualifiersDisplayContext.getCommerceTermEntriesCommercePaymentMethodGroupRelsAPIURL() %>"
			clayDataSetActionDropdownItems="<%= commercePaymentMethodGroupRelQualifiersDisplayContext.getCommerceTermEntryClayDataSetActionDropdownItems() %>"
			formName="fm"
			id="<%= CommercePaymentMethodGroupRelClayDataSetDisplayNames.COMMERCE_DATA_SET_KEY_COMMERCE_TERM_ENTRIES %>"
			itemsPerPage="<%= 10 %>"
			namespace="<%= liferayPortletResponse.getNamespace() %>"
			pageNumber="<%= 1 %>"
			portletURL="<%= currentURLObj %>"
		/>
	</commerce-ui:panel>
</c:if>