		task ("Given two new order types") {
			CommerceJSONOrdersAPI._addOrderType(
				active = "true",
				orderTypeDescription = "Test Order Type Descripiton",
				orderTypeName = "Test Order Type");

			CommerceJSONOrdersAPI._addOrderType(
				active = "true",
