{
	"description_i18n": {
		"en_US": "Hide contents with an exact term match on the given field."
	},
	"elementDefinition": {
		"category": "hide",
		"configuration": {
			"queryConfiguration": {
				"queryEntries": [
					{
						"clauses": [
							{
								"context": "query",
								"occur": "filter",
								"query": {
									"bool": {
										"must_not": [
											{
												"term": {
													"${configuration.field}": {
														"value": "${configuration.value}"
													}
												}
											}
										]
									}
								}
							}
						]
					}
				]
			}
		},
		"icon": "hidden",
		"uiConfiguration": {
			"fieldSets": [
				{
					"fields": [
						{
							"label": "Field",
							"name": "field",
							"type": "fieldMapping"
						},
						{
							"label": "Value",
							"name": "value",
							"type": "text"
						}
					]
				}
			]
		}
	},
	"title_i18n": {
		"en_US": "Hide by Exact Term Match"
	}
}